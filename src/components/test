import React, { useState } from "react";
import { useNavigate } from "react-router-dom";
import { apiRequest } from "./api";

const Login = (props) => {
  const [credentials, setCredentials] = useState({ email: "", password: "" });
  const [isLoading, setIsLoading] = useState(false);
  const navigate = useNavigate();

  const handleSubmit = async (e) => {
    e.preventDefault();
    if (!credentials.email || !credentials.password) {
      props.showAlert("Please fill in all fields", "warning");
      return;
    }

    setIsLoading(true);
    try {
      // Login API call
      const loginData = await apiRequest("/api/auth/login", "POST", credentials);

      // Save token in localStorage
      localStorage.setItem("token", loginData.authtoken);

      // Fetch user details
      const userData = await apiRequest("/api/auth/getuser", "POST", null, loginData.authtoken);

      // Save user type in localStorage
      localStorage.setItem("type", userData.type);

      props.showAlert("Logged in Successfully", "success");

      // Redirect based on user type
      if (userData.type === "A") {
        navigate("/admin");
      } else {
        navigate("/");
      }
    } catch (error) {
      console.error("Login Error:", error.message);
      props.showAlert(error.message || "Login failed. Please try again.", "danger");
    } finally {
      setIsLoading(false);
    }
  };

  const handleOnchange = (e) => {
    setCredentials({ ...credentials, [e.target.name]: e.target.value });
  };

  return (
    <div className="container mt-3">
      <h2>Login to continue to Client Feedbacks</h2>
      <form onSubmit={handleSubmit}>
        <div className="mb-3">
          <label htmlFor="email" className="form-label">Email address</label>
          <input
            value={credentials.email}
            onChange={handleOnchange}
            type="email"
            className="form-control"
            id="email"
            name="email"
            aria-describedby="emailHelp"
          />
        </div>
        <div className="mb-3">
          <label htmlFor="password" className="form-label">Password</label>
          <input
            value={credentials.password}
            onChange={handleOnchange}
            type="password"
            className="form-control"
            id="password"
            name="password"
          />
        </div>
        <button type="submit" className="btn btn-primary" disabled={isLoading}>
          {isLoading ? "Logging in..." : "Login"}
        </button>
      </form>
    </div>
  );
};

export default Login;
